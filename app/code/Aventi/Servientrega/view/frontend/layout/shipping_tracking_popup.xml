<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="empty" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock name="shipping.tracking.popup" remove="true"/>
            <block class="Aventi\Servientrega\Block\Tracking\Popup" name="servientrega_shipping.tracking.popup" template="Aventi_Servientrega::tracking/popup.phtml" cacheable="false">
                <arguments>
                    <argument name="delivery_date_title" xsi:type="object">Magento\Shipping\Block\DataProviders\Tracking\DeliveryDateTitle</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
