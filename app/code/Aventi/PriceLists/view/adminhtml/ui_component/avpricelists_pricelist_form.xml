                        </item>
                        <item name="2" xsi:type="array">
                            <item name="targetName" xsi:type="string">${ $.parentName}.customers_update_modal.update_customers_form_loader</item>
                            <item name="actionName" xsi:type="string">render</item>
                        </item>
                    </item>
                </item>
            </argument>
            <settings>
                <title translate="true">Add/Update customer</title>
                <imports>
                    <link name="parentId">${ $.provider}:data.general.entity_id</link>
                </imports>
            </settings>
        </button>
        <modal name="customers_update_modal">
            <settings>
                <options>
                    <option name="title" xsi:type="string" translate="true">Add/Update Customer</option>
                </options>
            </settings>
            <insertForm name="update_customers_form_loader" component="Aventi_PriceLists/js/form/components/customers-insert-form">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="priceListCustomersListingProvider" xsi:type="string">ns = avpricelists_pricelistcustomers_listing, index = avpricelists_pricelistcustomers_listing</item>
                        <item name="priceListCustomersModalProvider" xsi:type="string">${ $.parentName }</item>
                    </item>
                </argument>
                <settings>
                    <dataLinks>
                        <exports>true</exports>
                        <imports>true</imports>
                    </dataLinks>
                    <formSubmitType>ajax</formSubmitType>
                    <renderUrl path="mui/index/render_handle">
                        <param name="handle">avpricelists_pricelistcustomers_edit</param>
                        <param name="buttons">1</param>
                    </renderUrl>
                    <loading>false</loading>
                    <toolbarContainer>${ $.parentName }</toolbarContainer>
                    <externalProvider>${ $.ns }.avpricelists_pricelistcustomers_form_data_source</externalProvider>
                    <ns>avpricelists_pricelistcustomers_form</ns>
                    <exports>
                        <link name="parentId">${ $.externalProvider }:params.price_list_id</link>
                    </exports>
                    <imports>
                        <link name="parentId">${ $.provider}:data.general.entity_id</link>
                    </imports>
                </settings>
            </insertForm>
        </modal>
        <insertListing name="avpricelists_pricelistcustomers_listing" component="Magento_Ui/js/form/components/insert-listing">
            <settings>
                <dataLinks>
                    <exports>false</exports>
                    <imports>true</imports>
                </dataLinks>
                <autoRender>true</autoRender>
                <selectionsProvider>avpricelists_pricelistcustomers_listing.avpricelists_pricelistcustomers_listing.avpricelists_pricelistcustomers_columns.ids</selectionsProvider>
                <dataScope>avpricelists_pricelistcustomers_listing</dataScope>
                <externalProvider>avpricelists_pricelistcustomers_listing.avpricelists_pricelistcustomers_listing_data_source</externalProvider>
                <ns>avpricelists_pricelistcustomers_listing</ns>
                <exports>
                    <link name="price_list_id">${ $.externalProvider }:params.price_list_id</link>
                </exports>
                <imports>
                    <link name="price_list_id">${ $.provider}:data.general.entity_id</link>
                </imports>
            </settings>
        </insertListing>
    </fieldset>
    <fieldset name="categories">
        <settings>
            <level>1</level>
            <collapsible>false</collapsible>
            <label>Categories</label>
        </settings>
        <button name="add_category" component="Aventi_PriceLists/js/form/buttons/default">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
