            <settings>
                <dataLinks>
                    <exports>false</exports>
                    <imports>true</imports>
                </dataLinks>
                <autoRender>true</autoRender>
                <selectionsProvider>avpricelists_pricelistcategories_listing.avpricelists_pricelistcategories_listing.avpricelists_pricelistcategories_columns.ids</selectionsProvider>
                <dataScope>avpricelists_pricelistcategories_listing</dataScope>
                <externalProvider>avpricelists_pricelistcategories_listing.avpricelists_pricelistcategories_listing_data_source</externalProvider>
