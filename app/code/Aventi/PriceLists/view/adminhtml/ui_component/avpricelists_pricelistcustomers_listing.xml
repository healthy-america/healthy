<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">avpricelists_pricelistcustomers_listing.avpricelists_pricelistcustomers_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<spinner>avpricelists_pricelistcustomers_columns</spinner>
		<deps>
			<dep>avpricelists_pricelistcustomers_listing.avpricelists_pricelistcustomers_listing_data_source</dep>
		</deps>
		<buttons>
			<button name="add">
				<url path="*/*/new"/>
				<class>primary</class>
				<label translate="true">Add new PriceListCustomers</label>
			</button>
		</buttons>
	</settings>
	<dataSource name="avpricelists_pricelistcustomers_listing_data_source" component="Magento_Ui/js/grid/provider">
		<settings>
			<storageConfig>
				<param name="indexField" xsi:type="string">entity_id</param>
			</storageConfig>
            <filterUrlParams>
                <param name="price_list_id">*</param>
            </filterUrlParams>
			<updateUrl path="mui/index/render"/>
		</settings>
		<dataProvider name="avpricelists_pricelistcustomers_listing_data_source" class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>entity_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure to delete selected items?</message>
                        <title translate="true">Delete items</title>
                    </confirm>
                    <url path="avpricelists/pricelistcustomers/massdelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
        </massaction>
	</listingToolbar>
	<columns name="avpricelists_pricelistcustomers_columns">
		<settings>
			<editorConfig>
				<param name="selectProvider" xsi:type="string">avpricelists_pricelistcustomers_listing.avpricelists_pricelistcustomers_listing.avpricelists_pricelistcustomers_columns.ids</param>
				<param name="enabled" xsi:type="boolean">false</param>
				<param name="indexField" xsi:type="string">entity_id</param>
				<param name="clientConfig" xsi:type="array">
					<item name="saveUrl" xsi:type="url" path="avpricelists/priceListcustomers/inlineedit"/>
					<item name="validateBeforeSave" xsi:type="boolean">false</item>
				</param>
			</editorConfig>
			<childDefaults>
				<param name="fieldAction" xsi:type="array">
					<item name="provider" xsi:type="string">avpricelists_pricelistcustomers_listing.avpricelists_pricelistcustomers_listing.avpricelists_pricelistcustomers_columns_editor</item>
					<item name="target" xsi:type="string">startEdit</item>
					<item name="params" xsi:type="array">
						<item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
						<item name="1" xsi:type="boolean">true</item>
					</item>
				</param>
			</childDefaults>
		</settings>
		<selectionsColumn name="ids">
			<settings>
				<indexField>entity_id</indexField>
			</settings>
		</selectionsColumn>
		<column name="entity_id">
			<settings>
				<filter>text</filter>
				<sorting>asc</sorting>
				<label translate="true">ID</label>
			</settings>
		</column>
		<column name="price_list_id">
			<settings>
				<filter>text</filter>
				<label translate="true">Price list id</label>
			</settings>
		</column>
        <column name="customer_id">
            <settings>
                <filter>text</filter>
                <label translate="true">Customer id</label>
            </settings>
        </column>
		<column name="firstname">
			<settings>
				<filter>text</filter>
				<label translate="true">Firstname</label>
			</settings>
		</column>
		<column name="lastname">
			<settings>
				<filter>text</filter>
				<label translate="true">Lastname</label>
			</settings>
		</column>
        <actionsColumn name="actions" class="Aventi\PriceLists\Ui\Component\Listing\Column\PriceListCustomersActions">
            <settings>
                <indexField>entity_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>107</resizeDefaultWidth>
            </settings>
        </actionsColumn>
	</columns>
</listing>
