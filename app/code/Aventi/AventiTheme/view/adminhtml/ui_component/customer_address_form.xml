<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="general">
        <field name="suffix" sortOrder="31" formElement="select">
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <label translate="true">Customer type</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Aventi\AventiTheme\Model\Config\Source\CustomerTypeOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="fax" sortOrder="32" formElement="select">
            <settings>
                <dataType>text</dataType>
                <visible>true</visible>
                <label translate="true">Identification type</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Aventi\AventiTheme\Model\Config\Source\CustomerIdentificationTypeOptions"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="vat_id" sortOrder="33" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Identification number</label>
                <validation>
                    <rule name="validate-alphanum" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
