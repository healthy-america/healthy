<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <!-- script-src -->
        <policy id="script-src">
            <values>
                <value id="salesmanago" type="host">*.salesmanago.pl</value>
                <value id="cloudflare" type="host">*.cloudflare.com</value>
                <value id="adobedtm" type="host">*.adobedtm.com</value>
                <value id="iconify" type="host">*.iconify.design</value>
                <value id="googleapis" type="host">*.googleapis.com</value>
                <value id="gstatic" type="host">*.gstatic.com</value>
                <value id="fontawesome" type="host">*.fontawesome.com</value>
                <value id="jsdelivr" type="host">*.jsdelivr.net</value>
                <value id="sistecredito" type="host">*.credinet.co</value>
                <value id="playervimeo" type="host">player.vimeo.com</value>
                <value id="facebooknet" type="host">*.facebook.net</value>
				<value id="facebook_pixel" type="host">connect.facebook.net</value>
				<value id="facebook_pixel_img" type="host">www.facebook.com</value>
                <value id="cloudfront_loader" type="host">d335luupugsy2.cloudfront.net</value>
                <value id="gtag_google" type="host">www.googletagmanager.com</value>
               
            </values>
        </policy>
        <!-- style-src -->
        <policy id="style-src">
            <values>
                <value id="cloudflare" type="host">*.cloudflare.com</value>
                <value id="iconify" type="host">*.iconify.design</value>
                <value id="googleapis" type="host">*.googleapis.com</value>
                <value id="gstatic" type="host">*.gstatic.com</value>
                <value id="fontawesome" type="host">*.fontawesome.com</value>
                <value id="jsdelivr" type="host">*.jsdelivr.net</value>
            </values>
        </policy>
        <!-- img-src -->
        <policy id="img-src">
            <values>
                <value id="cloudflare" type="host">*.cloudflare.com</value>
                <value id="salesmanago" type="host">*.salesmanago.pl</value>
                <value id="iconify" type="host">*.iconify.design</value>
                <value id="googleapis" type="host">*.googleapis.com</value>
                <value id="gstatic" type="host">*.gstatic.com</value>
                <value id="fontawesome" type="host">*.fontawesome.com</value>
                <value id="amazonaws" type="host">*.amazonaws.com</value>
                <value id="kaptcha" type="host">*.kaptcha.com</value>
                <value id="seeklogo" type="host">seeklogo.com</value>
                <value id="facebook_pixel_img" type="host">www.facebook.com</value>
            </values>
        </policy>
        <!-- connect-src -->
        <policy id="connect-src">
            <values>
                <value id="cloudflare" type="host">*.cloudflare.com</value>
                <value id="salesmanago" type="host">*.salesmanago.pl</value>
                <value id="iconify" type="host">*.iconify.design</value>
                <value id="googleapis" type="host">*.googleapis.com</value>
                <value id="gstatic" type="host">*.gstatic.com</value>
                <value id="fontawesome" type="host">*.fontawesome.com</value>
                <value id="sistecredito" type="host">*.credinet.co</value>
            </values>
        </policy>
        <!-- font-src -->
        <policy id="font-src">
            <values>
                <value id="cloudflare" type="host">*.cloudflare.com</value>
                <value id="iconify" type="host">*.iconify.design</value>
                <value id="googleapis" type="host">*.googleapis.com</value>
                <value id="gstatic" type="host">*.gstatic.com</value>
                <value id="fontawesome" type="host">*.fontawesome.com</value>
                <value id="fontawesome_fonts" type="host">cdnjs.cloudflare.com</value>
            </values>
        </policy>
        <!-- frame-src -->
        <policy id="frame-src">
            <values>
                <value id="cloudflare" type="host">*.cloudflare.com</value>
                <value id="twitter" type="host">*.twitter.com</value>
                <value id="iconify" type="host">*.iconify.design</value>
                <value id="googleapis" type="host">*.googleapis.com</value>
                <value id="gstatic" type="host">*.gstatic.com</value>
                <value id="fontawesome" type="host">*.fontawesome.com</value>
                <value id="kaptcha" type="host">*.kaptcha.com</value>
            </values>
        </policy>
        <!-- form-action -->
        <policy id="form-action">
            <values>
                <value id="cloudflare" type="host">*.cloudflare.com</value>
                <value id="iconify" type="host">*.iconify.design</value>
                <value id="googleapis" type="host">*.googleapis.com</value>
                <value id="gstatic" type="host">*.gstatic.com</value>
                <value id="fontawesome" type="host">*.fontawesome.com</value>
                <value id="twitter" type="host">*.twitter.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>