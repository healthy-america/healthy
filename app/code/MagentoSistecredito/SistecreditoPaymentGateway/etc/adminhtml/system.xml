<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="sistecredito_gateway" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[<div class="logo-siste"></div>]]></label>
                <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <!-- Sistecredito Gateway Params -->
                <field id="vendor_id"  translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Vendor ID</label>
                    <validate>required-entry validate-alphanum no-whitespace validate-length minimum-length-10 maximum-length-50</validate>
                </field>
                <field id="store_id"  translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Store ID</label>
                    <validate>required-entry validate-alphanum no-whitespace validate-length minimum-length-10 maximum-length-50</validate>
                </field>
                <field id="subscription_key"  translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Subscription Key</label>
                    <validate>required-entry validate-alphanum no-whitespace validate-length minimum-length-10 maximum-length-50</validate>
                </field>
                <field id="environment" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Environment</label>
                    <source_model>MagentoSistecredito\SistecreditoPaymentGateway\Model\Adminhtml\Source\EnviromentAction</source_model>
                </field>
                <field id="on_same_site" translate="label" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Desea checkout “On Same Site” o “Redirect”</label>
                    <source_model>MagentoSistecredito\SistecreditoPaymentGateway\Model\Adminhtml\Source\CheckoutTypeAction</source_model>
                    <tooltip>
                        <![CDATA[- Por defecto se encuentra en <strong> Redirect</strong>, el usuario será redirigido a la página de Sistecrédito para hacer el pago. <br />
                                 - <strong> On Same Site</strong>, el usuario permanece en el comercio.]]>
                    </tooltip>
                </field>
                <field id="data_key" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Data Key</label>
                    <validate>validate-alphanum no-whitespace validate-length minimum-length-10 maximum-length-50</validate>
                </field>
                <field id="url_return"  translate="label" type="text" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Ingresa una dirección (URL) de retorno</label>
                    <validate>validate-length no-whitespace validate-url</validate>
                    <tooltip>
                        <![CDATA[- <strong>Con la url personalizada</strong> puedes tener una mejor experiencia para tu usuario final. Con esta podrás redirigirlo al sitio que más le convenga a tu marca.]]>
                    </tooltip>
                </field>
                <field id="active_simulator" translate="label" type="select" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Active simulator widget</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <tooltip>
                        <![CDATA[- <strong>Sí,</strong> el simulador se activará en el comercio mostrando las cuotas para cada producto.  <br />
                             - <strong>No,</strong> el simulador no se muestra en el comercio.]]>
                    </tooltip>
                </field>

                <field id="validate_btn" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="0">
                    <frontend_model>MagentoSistecredito\SistecreditoPaymentGateway\Block\System\Config\ValidateCredentials</frontend_model>
                </field>
                <!-- Provisional change approve by sistecredito development area to start the project without the permanent solution -->
                <!--<field id="validate_field"  type='hidden' translate="label" sortOrder="110" showInDefault="1" showInStore="0">
                    <validate>required-entry</validate>
                </field>-->
                <!--  END Sistecredito Gateway Params -->

                <field id="allowspecific" translate="label" type="allowspecific" sortOrder="130" showInDefault="9" showInWebsite="1" showInStore="0">
                    <label>Payment From Applicable Countries</label>
                    <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                </field>
                <field id="specificcountry" translate="label" type="multiselect" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Payment From Specific Countries</label>
                    <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                </field>
                <field id="sort_order" translate="label" type="text" sortOrder="160" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Sort Order</label>
                    <frontend_class>validate-number</frontend_class>
                </field>
            </group>
        </section>
    </system>
</config>
