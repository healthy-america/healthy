<script>
    require([
        'jquery'
    ], function($) {
        /* Shipping & Discount Code */
        $('.checkout-extra > .block > .title').on('click', function() {
            $('.checkout-extra .block').removeClass('active');
            $('.checkout-extra .block .title').removeClass('active');
            $('.checkout-extra .block .content').removeClass('active');
            $(this).addClass('active');
            $(this).parent().find('> .content').addClass('active');
        });

        const handler = "#shopping-cart-table";

        $(handler).on("click", ".plus", function(e) {
            const qtyInput = e.target.previousElementSibling;
            const qtyInputId = e.target.previousElementSibling.id;
            let realQty<?php echo $_item->getId() ?> = parseInt(qtyInput.value);

            if($('#'+qtyInputId).attr('disabled') !== 'disabled'){
                realQty<?php echo $_item->getId() ?>++;
                $('#'+qtyInputId).val(realQty<?php echo $_item->getId() ?>);
            }
        });

        $(handler).on("click", ".minus", function(e) {
            const qtyInput = e.target.nextElementSibling;
            const qtyInputId = e.target.nextElementSibling.id;
            let realQty<?php echo $_item->getId() ?> = parseInt(qtyInput.value);

            if($('#'+qtyInputId).attr('disabled') !== 'disabled'){
                if(realQty<?php echo $_item->getId() ?> > 1){
                    realQty<?php echo $_item->getId() ?>--;
                    $('#'+qtyInputId).val(realQty<?php echo $_item->getId() ?>);
                }
            }
        });
    });
</script>
